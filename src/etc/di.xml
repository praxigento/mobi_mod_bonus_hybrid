<?xml version="1.0"?>
<config
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!-- *** -->
    <!-- API -->
    <!-- *** -->
    <preference for="\Praxigento\BonusHybrid\Api\Stats\PlainInterface"
            type="\Praxigento\BonusHybrid\Api\Stats\Plain"/>

    <!-- ********************** -->
    <!-- Console (CLI Commands) -->
    <!-- ********************** -->
    <type name="Magento\Framework\Console\CommandList">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="prxgt_bonhyb_cmd_calc" xsi:type="object">\Praxigento\BonusHybrid\Cli\Cmd\Calc</item>
            </argument>
        </arguments>
    </type>

    <!-- **** -->
    <!-- Repo -->
    <!-- **** -->
    <preference for="\Praxigento\BonusHybrid\Repo\Entity\Registry\ISignupDebit"
            type="\Praxigento\BonusHybrid\Repo\Entity\Registry\Def\SignupDebit"/>
    <preference for="\Praxigento\BonusHybrid\Repo\Entity\Registry\IPto"
            type="\Praxigento\BonusHybrid\Repo\Entity\Registry\Def\Pto"/>

    <!-- ******** -->
    <!-- Services -->
    <!-- ******** -->
    <preference for="Praxigento\BonusHybrid\Service\ICalc"
            type="Praxigento\BonusHybrid\Service\Calc\Call"/>
    <preference for="\Praxigento\BonusHybrid\Service\Calc\ISignupDebit"
            type="\Praxigento\BonusHybrid\Service\Calc\SignupDebit"/>
    <preference for="Praxigento\BonusHybrid\Service\IPeriod"
            type="Praxigento\BonusHybrid\Service\Period\Call"/>

    <!-- ***** -->
    <!-- Tools -->
    <!-- ***** -->
    <preference for="Praxigento\BonusHybrid\Tool\IScheme"
            type="Praxigento\BonusHybrid\Tool\Def\Scheme"/>

</config>